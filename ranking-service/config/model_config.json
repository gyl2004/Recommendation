{
  "wide_deep_model": {
    "architecture": {
      "wide_feature_columns": [
        "age_buckets",
        "user_gender_indicator",
        "content_type_indicator",
        "age_gender_cross",
        "content_type_category_cross"
      ],
      "deep_feature_columns": [
        "user_age",
        "content_hot_score",
        "user_activity_score",
        "user_gender_embedding",
        "content_type_embedding",
        "content_category_embedding",
        "user_interests_embedding"
      ],
      "deep_hidden_units": [128, 64, 32],
      "dropout_rate": 0.1,
      "learning_rate": 0.001
    },
    "training": {
      "batch_size": 256,
      "epochs": 10,
      "validation_split": 0.2,
      "early_stopping_patience": 3,
      "reduce_lr_patience": 2,
      "min_learning_rate": 1e-6
    },
    "feature_engineering": {
      "numeric_features": [
        "user_age",
        "user_activity_score",
        "content_hot_score",
        "content_duration",
        "user_content_similarity"
      ],
      "categorical_features": [
        "user_gender",
        "content_type",
        "content_category",
        "user_interests",
        "device_type"
      ],
      "text_features": [
        "content_title",
        "content_tags"
      ],
      "scaler_type": "standard",
      "max_text_features": 1000,
      "embedding_dimensions": {
        "user_gender": 8,
        "content_type": 8,
        "content_category": 32,
        "user_interests": 64
      }
    },
    "evaluation": {
      "metrics": [
        "auc",
        "accuracy",
        "precision",
        "recall",
        "f1_score",
        "log_loss",
        "ndcg@1",
        "ndcg@3",
        "ndcg@5",
        "ndcg@10",
        "map",
        "mrr"
      ],
      "k_values": [1, 3, 5, 10],
      "generate_plots": true,
      "save_predictions": true
    }
  },
  "serving": {
    "model_server": {
      "max_batch_size": 64,
      "batch_timeout_ms": 10,
      "max_workers": 4,
      "enable_online_evaluation": true,
      "online_evaluation_window_size": 1000
    },
    "caching": {
      "enable_feature_cache": true,
      "feature_cache_ttl": 3600,
      "enable_prediction_cache": true,
      "prediction_cache_ttl": 300
    },
    "monitoring": {
      "enable_performance_monitoring": true,
      "enable_drift_detection": true,
      "drift_detection_threshold": 0.05,
      "alert_thresholds": {
        "response_time_ms": 500,
        "error_rate": 0.01,
        "cache_hit_rate": 0.8
      }
    }
  }
}