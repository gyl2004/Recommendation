{
  "models_dir": "models",
  "backup_dir": "models/backup",
  "evaluation_threshold": {
    "auc": 0.7,
    "f1_score": 0.6,
    "precision": 0.6,
    "recall": 0.6,
    "accuracy": 0.65
  },
  "server_config": {
    "max_batch_size": 64,
    "batch_timeout_ms": 10,
    "max_workers": 4
  },
  "monitoring": {
    "enable_online_evaluation": true,
    "drift_detection_threshold": 0.05,
    "metrics_retention_days": 30
  },
  "deployment": {
    "auto_backup": true,
    "validation_required": true,
    "rollback_on_failure": true
  }
}